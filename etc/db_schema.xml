<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="alekseon_custom_form_frontend_view" resource="default" engine="innodb" comment="Alekseon Custom Form Frontend View">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true"
                comment="Form Record Entity ID"/>
        <column xsi:type="int" name="form_id" unsigned="true" nullable="false"
                comment="Form Entity ID"/>
        <column xsi:type="text" name="title" nullable="true" comment="Title"/>
        <column xsi:type="mediumtext" name="row_content" nullable="true" comment="Row Content"/>
        <column xsi:type="mediumtext" name="filters" nullable="true" comment="Filters"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="ALEKSEON_CUSTOM_FORM_FRONTEND_VIEW_FORM_ID_ALEKSEON_CUSTOM_FORM_ENTT_ID"
                    table="alekseon_custom_form_frontned_view" column="form_id" referenceTable="alekseon_custom_form"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>
