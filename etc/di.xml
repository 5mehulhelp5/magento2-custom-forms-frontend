                            <item name="class" xsi:type="string">Alekseon\CustomFormsFrontend\Block\Form\Field\Checkbox</item>
                            <item name="template" xsi:type="string">Alekseon_CustomFormsFrontend::form/field/checkbox_vertical.phtml</item>
